<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_marginTop="@dimen/line_view"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/adapter_my_phrase_tv"
        style="@style/TextView.DefaultC5F4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_item_press"
        android:focusable="false"
        android:onClick="onClick"
        android:gravity="center_vertical"
        android:text="my word my god"
        android:padding="12dp"/>
    
    <LinearLayout
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/adapter_my_phrase_img_edit"
            style="@style/ImageView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="center"
            android:background="@color/c12"
            android:src="@mipmap/icon_edit"/>

        <ImageView
            android:id="@+id/adapter_my_phrase_img_delete"
            style="@style/ImageView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="center"
            android:background="@color/c8"
            android:src="@mipmap/icon_delete"/>

    </LinearLayout>

</LinearLayout>